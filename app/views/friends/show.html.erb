

<div class="card text-left">
    <h5 class="card-title card-header"> 
      <strong><%= @friend.first_name %> <%= @friend.last_name %>  </strong>
    </h5>
  
  
  <div class="card-body">
    <p class="card-text"> <strong>Email:</strong>
      <%= @friend.email %> 
    </p>
    <p class="card-text"> <strong>Phone:</strong>
      <%= @friend.phone %> 
    </p>
    <p class="card-text"> <strong>Twitter:</strong>
      <%= @friend.twitter %> 
    </p>
  </div>
  
</div>
<br>
<%= link_to 'Edit', edit_friend_path(@friend), class:"btn btn-secondary" %> |
<%= link_to 'Back', friends_path, class:"btn btn-secondary" %>
